@using System.Web.Optimization
@{
    Layout = null;
}
@helper SelectedTabClass(string tabName)
{
    if (ViewBag.SelectedTab == tabName)
    {
        @:active
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Simple Blog Admin</title>
    @Styles.Render("~/admin/styles")
</head>
<body>

    <div class="container">
        <ul class="nav nav-pills">
            <li class="@SelectedTabClass("videoposts")">@Html.ActionLink("VideoPosts", "Index", "VideoPosts", new { area = "admin" }, new { })</li>
            <li class="@SelectedTabClass("users")">@Html.ActionLink("Users", "Index", "Users", new { area = "admin" }, new { })</li>
            <li class="pull-right">@Html.RouteLink("Back to Home Page", "Home")</li>
        </ul>
        @RenderBody()
    </div>
    @Scripts.Render("~/admin/scripts")
    @RenderSection("Scripts", false)
</body>
</html>
